<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.serviceModel>
    <services>
      <service name="DemoSite.WCFDemo.Calc.CalcService">
        <endpoint binding="basicHttpBinding" name="WithHttp" contract="DemoSite.WCFDemo.Calc.ICalcService" />
      </service>      
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior name="">
          <!--默认设置，开启元数据交换 直接访问 svc 文件即可-->
          <serviceMetadata httpGetEnabled="true" />
          <serviceDebug includeExceptionDetailInFaults="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <client>
      <endpoint
        address="http://localhost:9999/WCFDemo/Calc/CalcService.svc"
        binding="basicHttpBinding"
        contract="DemoSite.WCFDemo.Calc.ICalcService"
        name="BasicHttpBinding_CalcService" />
    </client>
  </system.serviceModel>
</configuration>
